<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title.upcase, blog %></h2>
  <p class="blog-post-meta">Published on <%= blog.created_at.strftime("%B %d, %Y") %> at <%= blog.created_at.strftime("%I:%M%p")%></p>
  
  <% if logged_in?(:admin) %>
    <p class="blog-post-meta">
    <%= link_to blog.status[0].capitalize + blog.status[1..-1], toggle_status_blog_path(blog) %> /
    <%= link_to 'Edit', edit_blog_path(blog) %> /
    <%= link_to 'Delete Post', blog, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:admin) %>
    </p>
  <% end %>

  <p>
    <%= markdown blog.body %>
  </p>
</div>